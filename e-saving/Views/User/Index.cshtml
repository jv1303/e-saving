@{  
    Layout = "~/Views/Shared/_Layout_2.cshtml";
    ViewData["Title"] = "Escolha o tipo de cadastro";
    ViewData["Action"] = "DoLogin";
    ViewData["Submit"] = "Avançar";
    ViewData["SubmitTabIndex"] = 4;
    ViewData["Extra"] = "Já possuo cadastro";
    ViewData["ExtraController"] = "User";
    ViewData["ExtraAction"] = "Login";
    ViewData["ExtraTabIndex"] = 5;
    ViewData["HideSubmit"] = "hidden";
}

<div id="choose-form" class="user-form">
    <a asp-controller="User" asp-action="UserRegister" class="button-input" tabindex="-1">
        <input type="button" value="Usuário" class="button" name="user" tabindex="1" autofocus>
    </a>
    <label for="user" class="button-label">Reciclar o seu lixo</label>
    <a asp-controller="User" asp-action="PartnerRegister" class="button-input" tabindex="-1"> 
        <input type="button" value="Parceiro" class="button" name="partner" tabindex="2">
    </a>
    <label for="partner" class="button-label">Tornar seu estabelecimento um ponto de coleta</label>
    <a asp-controller="User" asp-action="BuyerRegister" class="button-input" tabindex="-1"> 
        <input type="button" value="Comprador" class="button" name="buyer" tabindex="3">
    </a>
    <label for="buyer" class="button-label">Comprar aparelhos e componentes reaproveitados</label>
</div>

